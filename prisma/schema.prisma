generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"

}

enum Role {
  SUPER_ADMIN
  ADMIN
  EDITOR
}

enum PlaceStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum ArticleType {
  NEWS
  GUIDE
}

enum InquiryType {
  STORE_LISTING
  GENERAL
}

enum InquiryStatus {
  PENDING
  REPLIED
  CLOSED
}

model AdminUser {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(EDITOR)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin_users")
}

model Area {
  id          String             @id @default(uuid())
  slug        String             @unique
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  translations AreaTranslation[]
  places      Place[]

  @@map("areas")
}

model AreaTranslation {
  id       String @id @default(uuid())
  areaId   String
  locale   String
  name     String
  area     Area   @relation(fields: [areaId], references: [id], onDelete: Cascade)

  @@unique([areaId, locale])
  @@map("area_translations")
}

model Category {
  id           String                 @id @default(uuid())
  slug         String                 @unique
  createdAt    DateTime               @default(now())
  updatedAt    DateTime               @updatedAt
  translations CategoryTranslation[]
  places       Place[]

  @@map("categories")
}

model CategoryTranslation {
  id         String   @id @default(uuid())
  categoryId String
  locale     String
  name       String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([categoryId, locale])
  @@map("category_translations")
}

model Tag {
  id           String            @id @default(uuid())
  slug         String            @unique
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  translations TagTranslation[]
  placeTags    PlaceTag[]

  @@map("tags")
}

model TagTranslation {
  id     String @id @default(uuid())
  tagId  String
  locale String
  name   String
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([tagId, locale])
  @@map("tag_translations")
}

model Place {
  id           String             @id @default(uuid())
  slug         String             @unique
  status       PlaceStatus        @default(DRAFT)
  areaId       String?
  categoryId   String?
  priceRange   Int?
  phone        String?
  email        String?
  website      String?
  address      String?
  latitude     Float?
  longitude    Float?
  openingHours Json?
  featured     Boolean            @default(false)
  viewCount    Int                @default(0)
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  area         Area?              @relation(fields: [areaId], references: [id])
  category     Category?          @relation(fields: [categoryId], references: [id])
  translations PlaceTranslation[]
  images       PlaceImage[]
  tags         PlaceTag[]

  @@index([status, featured])
  @@index([areaId])
  @@index([categoryId])
  @@map("places")
}

model PlaceTranslation {
  id          String @id @default(uuid())
  placeId     String
  locale      String
  name        String
  description String @db.Text
  place       Place  @relation(fields: [placeId], references: [id], onDelete: Cascade)

  @@unique([placeId, locale])
  @@map("place_translations")
}

model PlaceImage {
  id        String   @id @default(uuid())
  placeId   String
  url       String
  alt       String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  place     Place    @relation(fields: [placeId], references: [id], onDelete: Cascade)

  @@map("place_images")
}

model PlaceTag {
  placeId String
  tagId   String
  place   Place  @relation(fields: [placeId], references: [id], onDelete: Cascade)
  tag     Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([placeId, tagId])
  @@map("place_tags")
}

model Article {
  id           String               @id @default(uuid())
  slug         String               @unique
  type         ArticleType
  published    Boolean              @default(false)
  featured     Boolean              @default(false)
  viewCount    Int                  @default(0)
  publishedAt  DateTime?
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  translations ArticleTranslation[]

  @@index([type, published])
  @@map("articles")
}

model ArticleTranslation {
  id        String  @id @default(uuid())
  articleId String
  locale    String
  title     String
  content   String  @db.Text
  excerpt   String?
  coverUrl  String?
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([articleId, locale])
  @@map("article_translations")
}

model CommunityPost {
  id        String          @id @default(uuid())
  title     String
  content   String          @db.Text
  authorId  String?
  locale    String          @default("ja")
  hidden    Boolean         @default(false)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  replies   CommunityReply[]

  @@index([hidden, createdAt])
  @@map("community_posts")
}

model CommunityReply {
  id        String        @id @default(uuid())
  postId    String
  content   String        @db.Text
  authorId  String?
  hidden    Boolean       @default(false)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  post      CommunityPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@map("community_replies")
}

model Inquiry {
  id        String        @id @default(uuid())
  type      InquiryType
  status    InquiryStatus @default(PENDING)
  name      String
  email     String
  phone     String?
  subject   String
  message   String        @db.Text
  reply     String?       @db.Text
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([status, createdAt])
  @@map("inquiries")
}

model Media {
  id        String   @id @default(uuid())
  url       String
  filename  String
  mimeType  String
  size      Int
  createdAt DateTime @default(now())

  @@map("media")
}